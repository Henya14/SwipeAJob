<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.JobSwiperActivityFragments.JobSearcher.JobSwiperFragmentJobSearcher">

    <RelativeLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/skip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/rewind_button"
            app:backgroundTint="@android:color/white"
            app:srcCompat="@drawable/baseline_thumb_down_black_24"
            app:fabSize="auto"
            android:contentDescription="@string/dislike_button_description"

            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/rewind_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/app_margin"
            app:backgroundTint="@android:color/white"
            app:fabSize="mini"
            android:visibility="invisible"
            android:contentDescription="@string/rewind_button_description"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/rewind_button"
            app:backgroundTint="@android:color/white"
            app:srcCompat="@drawable/baseline_thumb_up_black_24"
            app:fabSize="auto"
            android:contentDescription="@string/like_button_description"/>

    </RelativeLayout>

    <com.yuyakaido.android.cardstackview.CardStackView
        android:id="@+id/cardStackView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_container"
        android:clipToPadding="false"
        android:padding="4dp"/>

    <View
        android:id="@+id/greyLoadingScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/grey"
        android:visibility="invisible"
        app:elevation="20dp"
         />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="21dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
         />

</RelativeLayout>


